
#lexical specification
skip SYMBOL '\W.+'
skip DIVIDER '%'
skip WS '\s'

token COMMENT '#.*'
token TOKEN 'token.+$'
token SKIP 'skip.+$'
token ID '[A-Z].+'
token RE '\'.*\''


%
#syntax
<q8> ::= <line>
<line>:Comment ::= COMMENT
<line>:Ruler ::= <rule>
<rule>:Skipper ::=  SKIP 
<rule>:TokenerFull ::=  TOKEN
<rule>:TokenerShort ::= <ID> <RE>
